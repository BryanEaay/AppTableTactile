<UserControl
	x:Class="AppAdministrationWPF.View.AdminRegionView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="1665"
	Height="1000"
	Margin="0"
	HorizontalAlignment="Center"
	VerticalAlignment="Top"
	Background="Black"
	BorderBrush="Black"
	BorderThickness="1"
	Foreground="{x:Null}"
	TabIndex="1"
	mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="BaseTemplate">
            <Image Source="{Binding IconPath}" />
        </DataTemplate>

        <Style x:Key="NoNothingButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Cursor" Value="Pen" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <EventSetter Event="Click" Handler="selectOne" />
            <Setter Property="Background" Value="#01000000" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
						BlurRadius="36"
						Direction="275"
						Opacity="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  PlaceHolder list  -->
        <Style x:Key="PlaceHoldersList" TargetType="ItemsControl">
            <!--  Area where to put PlaceHolders  -->
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <Canvas Margin="0" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <!--  PlaceHolder look  -->
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Button Style="{StaticResource NoNothingButton}">
                            <Button.Content>
                                <Image Source="{Binding Path=IconPath}" Stretch="None" />
                            </Button.Content>
                        </Button>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid
		x:Name="GridMap"
		Height="1000"
		VerticalAlignment="Top"
		Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="820" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1665" />
        </Grid.ColumnDefinitions>
        <Canvas
			x:Name="canvasCarte"
			Width="1490"
			Height="780"
			MouseLeftButtonUp="Map_MouseLeftButtonUp"
			MouseMove="Map_MouseMove">
            <Image
				x:Name="Carte"
				Width="{Binding Path=ActualWidth, ElementName=canvasCarte}"
				Height="{Binding Path=ActualHeight, ElementName=canvasCarte}"
				Margin="0"
				Stretch="Uniform" />
            <ItemsControl
				x:Name="mapBackground"
				Width="{Binding Path=ActualWidth, ElementName=canvasCarte}"
				Height="{Binding Path=ActualHeight, ElementName=canvasCarte}"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Background="Transparent"
				ItemsSource="{Binding SelectedMap.PlaceHolders}"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				Style="{StaticResource PlaceHoldersList}">

                <!--  X Y where to put PlaceHolders  -->
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Top" Value="{Binding Path=Y}" />
                        <Setter Property="Canvas.Left" Value="{Binding Path=X}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Canvas>

        <Border
			Grid.Row="1"
			Margin="10,10"
			BorderBrush="White"
			BorderThickness="2"
			CornerRadius="20">
            <Grid x:Name="grid1" ClipToBounds="True">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="279*" />
                    <ColumnDefinition Width="201*" />
                    <ColumnDefinition Width="719*" />
                    <ColumnDefinition Width="62*"/>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="49*" />
                    <RowDefinition Height="29*"/>
                    <RowDefinition Height="78*" />
                </Grid.RowDefinitions>

                <!--  Modification des Cartes  -->
                <Label
					Grid.Row="0"
					Grid.Column="2"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					FontSize="16"
					Foreground="White" Margin="276,0,0,0" Height="31" Width="443">
                    Modification des Cartes :
                </Label>
                <StackPanel
					Grid.Row="0"
					Grid.Column="2"
					Margin="96,0,73,10"
					HorizontalAlignment="Center"
					VerticalAlignment="Bottom"
					Orientation="Horizontal" Grid.ColumnSpan="2" Grid.RowSpan="2">
                    <Button
						x:Name="btAddMap"
						Width="150"
						Height="35"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="btAddMap_Click"
						Content="Ajouter carte" />
                    <Button
						x:Name="btModifierCarte"
						Width="150"
						Height="35"
						Margin="50,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="btEditMap_Click"
						Content="Modifier carte" />
                    <Button
						x:Name="btDeleteMap"
						Width="150"
						Height="35"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="btDeleteMap_Click"
						Content="Supprimer carte" />
                </StackPanel>

                <!--  Modification des medias -->
                <Label
					Grid.Row="2"
					Grid.Column="2"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					FontSize="16"
					Foreground="White" Margin="276,0,0,0" Height="31" Width="443">
                    Modification des Lieux :
                </Label>
                <StackPanel
					Grid.Row="2"
					Grid.Column="2"
					Margin="96,0,73,10"
					HorizontalAlignment="Center"
					VerticalAlignment="Bottom"
					Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Button
						x:Name="btAddPlace"
						Width="150"
						Height="35"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="btAddPlace_Click"
						Content="Ajouter lieu" />
                    <Button
						x:Name="btEditPlace"
						Width="150"
						Height="35"
						Margin="50,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="miEditPH_Click"
						Content="Modifier lieu" />
                    <Button
						x:Name="btDeletePlace"
						Width="150"
						Height="35"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="miDeletePH_Click"
						Content="Supprimer lieu" />
                </StackPanel>

                <!--  IMPORT / EXPORT  -->
                <StackPanel
					Grid.RowSpan="3"
					Grid.Column="0"
					HorizontalAlignment="Center"
					Orientation="Horizontal" Margin="-10,0,190,0" Grid.ColumnSpan="2">
                    <Button
						x:Name="btImporter"
						Grid.Column="1"
						Width="100"
						Height="35"
						Margin="25"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="btImporter_Click"
						Content="Importer" />
                    <Button
						x:Name="btExporter"
						Grid.Column="0"
						Width="100"
						Height="35"
						Margin="25"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						BorderBrush="{x:Null}"
						Click="btExporter_Click"
						Content="Exporter" />
                </StackPanel>

                <!--  Image de prévualisation  -->
                <GroupBox
					Name="dock_miniature"
					Grid.RowSpan="3"
					Grid.Column="1"
					Width="180"
					Height="150"
					Padding="0"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="18"
					Foreground="White"
					Header="Miniature" Margin="0,0,0,10">
                    <MediaElement
						Width="160"
						Height="120"
						MediaEnded="m_MediaEnded"
						Source="{Binding SelectedMap.Thumbnail}"
						UnloadedBehavior="Manual" />
                </GroupBox>

                <!--  Boutons pour changer l'ordre des cartes  -->
                <Button
					x:Name="buttonUp"
					Grid.Row="0"
					Grid.Column="4"
					Width="50"
					Height="60"
					Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
					Click="buttonUp_Click"
					Content="^"
					FontSize="24" Margin="15,9" Grid.RowSpan="2" />
                <Button
					x:Name="buttonDown"
					Grid.Row="2"
					Grid.Column="4"
					Width="50"
					Height="60"
					Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
					Click="buttonDown_Click"
					Content="v"
					FontSize="24" Margin="15,9" />

                <!--  Liste des cartes  -->
                <ListBox
					x:Name="listboxMaps"
					Grid.RowSpan="3"
					Grid.Column="5"
					Margin="10,5"
					DisplayMemberPath="Name"
					FontSize="16"
					ItemsSource="{Binding Maps}"
					SelectionChanged="changeMap"
					SelectionMode="Single" />
            </Grid>
        </Border>
    </Grid>
</UserControl>